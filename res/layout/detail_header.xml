<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@drawable/mysence3"
        android:id="@+id/header_layout">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sence_icon" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_normal"/>
            <EditText 
                android:id="@+id/sence_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标准模式"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:background="@drawable/name_bg"/>
             <TextView 
                 android:id="@+id/english_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="normal"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/small_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="使用中"
                 android:textColor="@android:color/white"
                 android:layout_marginLeft="70dp"
                 android:textSize="16sp"
                 android:layout_gravity="center_vertical"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:src="@drawable/stat_bluetooth_on"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:src="@drawable/stat_gps_on"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:src="@drawable/stat_sound_on"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:src="@drawable/stat_vibrate_on"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:src="@drawable/stat_wifi_on"/>
            
        </LinearLayout>
    </LinearLayout>